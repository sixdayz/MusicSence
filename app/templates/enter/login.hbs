<div class="col-sm-4 col-sm-offset-4">
    <div class="form-wrap">
        <h3 class="text-center">Log in to your 10tracks account</h3>
        <form role="form" action="" method="post" data-role="login-form" autocomplete="off">
            <div class="form-group">
                <label for="login" class="sr-only">Login</label>
                <input type="text" name="login" id="login" class="form-control" placeholder="Type your login or email">
            </div>
             <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Type your password">
            </div>
            <input type="submit" data-loading-text="Loading..." data-role="complete-btn" class="btn btn-default  btn-block " value="Login" />
        </form>
    </div>
    <p>
        <a href="#" data-role="reg-btn">Register</a>
    </p>
</div>